services:
  lmsreaders:
    image: lmsreaderscommand:latest
    environment:
      - SPRING_PROFILES_ACTIVE=sqlServer,bootstrap,recomendationAlgorithm2,hash
      - spring.datasource.url=jdbc:postgresql://lmsreaderscommand_postgres${TASK_SLOT}:${POSTGRES_PORT:-5432}/postgres
      - spring.datasource.username=postgres
      - spring.datasource.password=password
      - spring.datasource.driver-class-name=org.postgresql.Driver
      - spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect
      - file.upload-dir=/tmp/uploads-psoft-g1-instance1
      - spring.rabbitmq.host=rabbitmq
      - bootstrap.mode=static
    volumes:
      - "uploaded_files_volume_1:/tmp"
    deploy:
      replicas: 2
    ports:
      - "8088:8081"  # Expose the lmsbooks service on port 8087
    networks:
      - lms_network
    depends_on:
      - postgres
      - rabbitmq

  postgres:
    image: postgres:latest
    environment:
      - POSTGRES_DB=postgres
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=password
    deploy:
      replicas: 2
    ports:
#      - "5432:5432"  # Default Postgres port for the first replica
#      - "5433:5432"  # Postgres port for the second replica
#      - "5434:5432"  # Postgres port for the third replica
      - "5432-5434:5432"

    networks:
      - lms_network

  rabbitmq:
    image:	rabbitmq:3-management
    container_name: rabbitmq
    restart:	always
    deploy:
      replicas: 1
    ports:
      - "5672:5672"		#	RabbitMQ	main	port
      - "15672:15672"		#	RabbitMQ	management	UI
    environment:
      RABBITMQ_DEFAULT_USER:	guest
      RABBITMQ_DEFAULT_PASS:	guest
    networks:
      - lms_network

networks:
  lms_network:
    name: lms_network
    driver: overlay

volumes:
  uploaded_files_volume_1:
  uploaded_files_volume_2: