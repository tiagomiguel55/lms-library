pipeline {
    agent any

    environment {
        MAVEN_HOME = '/usr/share/maven'
        JAVA_HOME = '/usr/lib/jvm/java-17-openjdk-amd64'
        GIT_REPO_URL = 'https://github.com/tiagomiguel55/lms-library.git'
        GIT_BRANCH = 'main'
        CREDENTIALS_ID = 'password_for_github_tiago'

        IMAGE_NAME = 'lmsbooks'
        IMAGE_TAG = 'latest'
        STACK_NAME = 'lms_stack'
        COMPOSE_FILE = 'docker-compose-swarm.yml'
    }

    stages {

        stage('Debug Environment') {
            steps {
                sh 'echo "Using Java:" && $JAVA_HOME/bin/java -version'
                sh 'echo "Using Maven:" && $MAVEN_HOME/bin/mvn -v'
                sh 'env'
            }
        }

        stage('Check Docker') {
            steps {
                sh 'docker --version'
            }
        }

        stage('Checkout') {
            steps {
                git branch: "${GIT_BRANCH}",
                    url: "${GIT_REPO_URL}",
                    credentialsId: "${CREDENTIALS_ID}"
            }
        }

        stage('Clean and Build') {
            steps {
                sh """
                    export JAVA_HOME=${JAVA_HOME}
                    export PATH=\$JAVA_HOME/bin:\$PATH
                    ${MAVEN_HOME}/bin/mvn clean install
                """
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
            }
        }

        stage('Deploy Docker Swarm Stack') {
            steps {
                script {
                    // Verifica se o ficheiro existe
                    sh """
                        if [ ! -f ${COMPOSE_FILE} ]; then
                            echo "ERROR: ${COMPOSE_FILE} not found!"
                            exit 1
                        fi
                    """

                    // Faz deploy da stack
                    sh "docker stack deploy -c ${COMPOSE_FILE} ${STACK_NAME}"
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
